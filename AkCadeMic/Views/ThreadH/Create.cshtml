@model AkCadeMic.Models.ThreadH

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: whitesmoke;
    }

    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 2px solid black;
        border-radius: 2px;
    }

    textarea {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 2px solid black;
        border-radius: 2px;
        height: 180px;
    }

    .button {
        background-color: darkblue;
        border: 2px solid black;
        color: white;
        text-align: center;
        display: inline-block;
        font-size: 20px;
        width: 150px;
    }
</style>
<div class="text-center">
    <br />
    <h1><b>Create a new Thread</b></h1>
</div>
<br />
<div class="row">
    <div class="col-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3><b>Subject</b></h3>
                <input type="text" asp-for="SubjectH" placeholder="Enter Subject" size="50" />
                <span asp-validation-for="SubjectH" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3><b>Body</b></h3>
                <textarea asp-for="BodyH" placeholder="Body..."></textarea>
                <span asp-validation-for="BodyH" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input class="button" type="submit" value="Post" />
                <a style="float:right;" asp-action="Index">Back to Threads</a>
            </div>
        </form>
    </div>
    <div class="col-6">
        <br />
        <img src="~/lib/image/post.png" />
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
