@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model IEnumerable<AkCadeMic.Models.Thread>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUser = await UserManager.GetUserAsync(User);
}
<style>
    body {
        background-color: whitesmoke;
    }

    .button {
        background-color: darkblue;
        border: 2px solid black;
        color: white;
        float: left;
        display: inline-block;
        font-size: 24px;
        width: 300px;
    }
</style>
<div class="text-center">
    <br />
    <h1><b>ABM Related Threads </b></h1>
    <form>
        <input asp-action="Create" class="button" type="submit" value="Start a new Thread" />
        @if (currentUser.isAdmin == 1)
            {
    <input asp-action="Manage" style="float:right;background-color:lightgrey;color:black;" class="button" type="submit" value="Manage Threads" />
            }
    </form>
    <br />
    <br />
    <br />
    <table class="table text-center">
        @foreach (var item in Model)
        {
        <tr style="border:1px solid black">
            <td>
                <div>
                    <span style="float:left;font-size:20px; color:darkslateblue;">
                        @item.User.Email
                    </span>
                    <span style="float:right">
                        @item.DateAdded.ToString("MM/dd/yyyy hh:mm tt")
                    </span>
                    <div style="text-align:center;position:center;">
                        <span style="font-size:35px;font-weight:bold;">
                            @Html.DisplayFor(modelItem => item.Subject)
                        </span>
                        <br />
                        <span style="font-size:20px;">
                            @Html.DisplayFor(modelItem => item.Body)
                        </span>
                    </div>
                </div>
                <hr />
                <h4 style="font-weight:bold;">Comments</h4>
                @foreach (var reply in item.Replies)
                {
                    <span style="font-size:20px; color:darkblue;">
                        @reply.User
                    </span>
                    <br />
                    <span>
                        @reply.Text
                        <br />
                    </span>
                }
                <br />
                @using (Html.BeginForm("Comment", "Thread", FormMethod.Post))
                {
                    <input type="text" name="Text" stlye="width:100%; height:100px; font-size:20px; margin-top:10px" />
                    <input type="hidden" name="ThreadId" value="@item.PostId" />
                    <input type="hidden" name="User" value="@item.User" />
                    <br />
                    <input type="submit" value="Post Reply" class="btn btn-success" style="margin-top:10px" />
                }
            </td>
        </tr>
        }
    </table>
</div>
