@model IEnumerable<AkCadeMic.Models.Reply>

@{
    ViewData["Title"] = "ManageComments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h1>Manage ABM Comments</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Post Id
                </th>
                <th>
                    Email
                </th>
                <th>
                    Text
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ThreadId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    <a asp-action="DeleteComment" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
