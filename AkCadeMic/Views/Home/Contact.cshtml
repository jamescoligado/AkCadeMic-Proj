@model AkCadeMic.Models.Contact

@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color: whitesmoke;
    }

    input[type=text] {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 2px solid black;
        border-radius: 2px;
    }

    textarea {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        box-sizing: border-box;
        border: 2px solid black;
        border-radius: 2px;
        height: 180px;
    }

    .button {
        background-color: darkblue;
        border: 2px solid black;
        color: white;
        text-align: center;
        display: inline-block;
        font-size: 20px;
        width: 150px;

    }
</style>
<div class="text-center">
    <br />
    <h1><b>Contact Us</b></h1>
</div>
<div class="row">
    <div class="col-6">
        <form asp-action="Contact">
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success">
                    @ViewBag.Message
                    </div>            
            }
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3><b>Name</b></h3>
                <input asp-for="SenderName" class="form-control" placeholder="Enter Name" />
                <span asp-validation-for="SenderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3><b>Email Address</b></h3>
                <input asp-for="Email" class="form-control" placeholder="Enter Email Address" style="border: 2px solid black; box-sizing: border-box; border-radius: 2px; padding: 12px 20px; width: 100%; border-radius: 2px; " />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3><b>Contact No.</b></h3>
                <input asp-for="ContactNo" class="form-control" placeholder="Enter Contact Number" />
                <span asp-validation-for="ContactNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3><b>Subject</b></h3>
                <input asp-for="Subject" class="form-control" placeholder="Enter Subject" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h3><b>Message</b></h3>
                <textarea asp-for="Message" class="form-control" placeholder="Leave a message..." style="width: 100%; padding: 12px 20px; margin: 8px 0; box-sizing: border-box; border: 2px solid black; border-radius: 2px; height: 180px;"> </textarea>
                <span asp-validation-for="Message" class="text-danger"> </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" style="float: right; background-color: darkblue; border: 2px solid black; color: white; text-align: center; display: inline-block; font-size: 20px; width: 150px;" />
            </div>
        </form>
    </div>
    <div class="col-6">
        <h3><b>You can also reach us out via </b></h3>
        <h3><b>Our Facebook Page: </b> </h3>
        <img src="~/lib/image/fbq.png" width="250" height="250" style="display: block; margin-left: auto; margin-right: auto;"/>
        <br />
        <h3><b>Where You Can Find Us?</b></h3>
        <h4 style="text-align:center;"><b>De La Salle - College of Saint Benilde</b></h4>
        <div class="map-responsive">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3861.6212083613987!2d120.99287701536461!3d14.563640981884536!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3397c97919f8cb45%3A0x1ccd3a08e045e228!2sDe%20La%20Salle-College%20of%20Saint%20Benilde%20Manila!5e0!3m2!1sen!2sph!4v1625999858266!5m2!1sen!2sph" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>

        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
