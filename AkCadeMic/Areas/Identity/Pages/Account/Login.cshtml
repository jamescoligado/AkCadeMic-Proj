@page
@model LoginModel

@{ ViewData["Title"] = "Log in"; }
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AkCadeMic</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background-image: url("https://lh3.googleusercontent.com/-DMRCZBZ_6fc/YOrOzXMmccI/AAAAAAAAAAY/TuEJXLYl0jstPUD_8tud3_wmdOgHJBVYwCLcBGAsYHQ/w683-h599/csb.png%22");
            background-repeat: no-repeat;
            background-size: 100%;
            background-size: cover;
        }

        .footer {
            background-color: white;
        }

        div.transbox {
            background-color: #ffffff;
            position: fixed;
            opacity: 0.8;
            border-radius: 10px;
            padding-bottom: 50px;
            padding-left: 50px;
            padding-right: 50px;
            margin-top: 45px;
            margin-left: 950px;
            height: 550px;
            width: 500px;
        }

        h1 {
            text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <img src="~/lib/image/Logo.png" width="50" height="50" />
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="background">
        <div class="transbox text-center">
            <section>
                <form id="account" method="post">
                    <br />
                    <h1>Log In</h1>

                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <br><br>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                        <br><br>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <br />
                    <div class="form-group">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create New Account</a>
                        </p>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
        <div class="col-md-6 col-md-offset-2">
            <section>

                <hr />
                @{ if ((Model.ExternalLogins?.Count ?? 0) == 0)
                    {

                    }
                    else
                    {
        <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
            <div>
                <p>
                    @foreach (var provider in Model.ExternalLogins)
                    {
    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>}
                </p>
            </div>
        </form> } }
            </section>
        </div>
    </div>
</body>
<footer class="border-top footer text-muted">
    <div class="container">
        &copy; 2021 - AkCadeMic - <a asp-area="" asp-controller="Home" asp-action="Policy">Policy</a>
    </div>
</footer>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
